{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend service for todo app",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm run clean && npm run lint && npm run tsc",
    "dev:start": "npm run build && npm start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "jest --runInBand"
  },
  "author": "hellosaeedalizadeh@gmail.com",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "redis": "^3.0.2",
    "util": "^0.12.3",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@types/redis": "^2.8.22",
    "@types/uuid": "^8.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "node-hooks": {
    "preserve-scripts": [
      "lint"
    ],
    "preserve-hooks": [
      "pre-commit"
    ],
    "preserve-files": [
      ".editorconfig",
      ".eslintignore",
      ".eslintrc.json"
    ]
  },
  "pre-commit": [
    "test"
  ],
  "pre-push": [],
  "post-merge": []
}
